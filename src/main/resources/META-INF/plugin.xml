<idea-plugin>
    <id>com.github.silverrka.intelljiblackjack</id>
    <name>IntelljIBlackJack</name>
    <vendor>silverrka</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="BlackJack.Break"
                anchor="right"
                factoryClass="blackjack.plugin.BlackJackToolWindowFactory"
                icon="/images/chipIcon.png" />
    </extensions>

    <actions>
        <action id="com.github.silverrka.intelljiblackjack.actions.PlayGameAction" class="com.github.silverrka.intelljiblackjack.actions.PlayGameAction"
                text="Take A Break - Play BlackJack!" description="Play game example">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
    </actions>

    <applicationListeners>
        <listener class="blackjack.listeners.ApplicationLifecycleListener" topic="com.intellij.ide.AppLifecycleListener" />
    </applicationListeners>

    <projectListeners>
        <listener class="blackjack.listeners.ProjectActivityListener" topic="com.intellij.task.ProjectTaskListener" />
        <listener class="blackjack.listeners.FileEditorEventListener" topic="com.intellij.openapi.fileEditor.FileEditorManagerListener" />
        <listener class="blackjack.listeners.DocumentSaveListener" topic="com.intellij.openapi.fileEditor.FileDocumentManagerListener" />
    </projectListeners>
    <idea-version since-build="201.6668.113"/>
</idea-plugin>
